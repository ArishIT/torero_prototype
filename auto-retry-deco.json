{
    "$id": "root",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "hostname": {
            "type": "string",
            "description": "Device hostname to connect to"
        },
        "username": {
            "type": "string",
            "description": "Username for device authentication"
        },
        "password": {
            "type": "string",
            "description": "Password for device authentication"
        },
        "operation": {
            "type": "string",
            "enum": [
                "connect",
                "get-config",
                "apply-config"
            ],
            "description": "Operation to perform on the device"
        },
        "max_retries": {
            "type": "integer",
            "minimum": 1,
            "default": 3,
            "description": "Maximum number of retry attempts"
        },
        "delay": {
            "type": "number",
            "minimum": 0.1,
            "default": 1.0,
            "description": "Initial delay between retries in seconds"
        },
        "backoff_factor": {
            "type": "number",
            "minimum": 1.0,
            "default": 2.0,
            "description": "Multiplier for delay after each retry"
        },
        "exceptions": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "default": [
                "ConnectionError",
                "TimeoutError"
            ],
            "description": "List of exception types to catch and retry on"
        }
    },
    "required": [
        "hostname",
        "username",
        "password",
        "operation"
    ],
    "additionalProperties": false
}