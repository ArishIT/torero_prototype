{
    "$id": "root",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "max_retries": {
            "type": "integer",
            "minimum": 1,
            "default": 3,
            "description": "Maximum number of retry attempts"
        },
        "delay": {
            "type": "number",
            "minimum": 0.1,
            "default": 1.0,
            "description": "Initial delay between retries in seconds"
        },
        "backoff_factor": {
            "type": "number",
            "minimum": 1.0,
            "default": 2.0,
            "description": "Multiplier for delay after each retry"
        },
        "exceptions": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "default": [
                "ConnectionError",
                "TimeoutError"
            ],
            "description": "List of exception types to catch and retry on"
        }
    },
    "additionalProperties": false
}