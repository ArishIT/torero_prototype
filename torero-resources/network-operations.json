{
    "name": "network-operations",
    "description": "Network operations service with auto-retry functionality",
    "type": "python-script",
    "script": "main.py",
    "parameters": {
        "hostname": {
            "type": "string",
            "description": "Device hostname to connect to",
            "required": true
        },
        "username": {
            "type": "string",
            "description": "Username for device authentication",
            "required": true
        },
        "password": {
            "type": "string",
            "description": "Password for device authentication",
            "required": true
        },
        "operation": {
            "type": "string",
            "enum": [
                "connect",
                "get-config",
                "apply-config"
            ],
            "description": "Operation to perform on the device",
            "required": true
        },
        "max-retries": {
            "type": "integer",
            "description": "Maximum number of retry attempts",
            "default": 3
        },
        "delay": {
            "type": "number",
            "description": "Initial delay between retries in seconds",
            "default": 1.0
        },
        "backoff-factor": {
            "type": "number",
            "description": "Multiplier for delay after each retry",
            "default": 2.0
        }
    }
}